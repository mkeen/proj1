FROM debian:jessie
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       	         libapr1 \
	               libaprutil1 \
	               libapr1-dev \
	               libaprutil1-dev \
	               libpcre++0 \
	               libssl1.0.0

RUN buildDeps=' \
      ca-certificates \
		  curl \
		  bzip2 \
		  gcc \
		  libpcre++-dev \
		  libssl-dev \
		  make \
    ' \
    set -x \
    && apt-get update \
    && apt-get install -y --no-install-recommends $buildDeps

RUN apt-get install -y wget
ENV HTTPD_PREFIX /usr/local/apache2
ENV PATH $PATH:$HTTPD_PREFIX/bin
RUN mkdir -p "$HTTPD_PREFIX" \
    && chown www-data:www-data "$HTTPD_PREFIX"
WORKDIR $HTTPD_PREFIX
RUN mkdir /src
RUN mkdir /src/apache
WORKDIR /src/apache
RUN wget http://www-us.apache.org/dist//httpd/httpd-2.4.18.tar.gz
RUN tar -xzf httpd-2.4.18.tar.gz
WORKDIR httpd-2.4.18
RUN ./configure --with-mpm=event --enable-so --enable-ssl --prefix=$HTTPD_PREFIX
RUN make -j"$(nproc)"
RUN make install
COPY ./docker/httpd-foreground /usr/local/bin/
COPY ./app/**/* /usr/local/apache2/htdocs/
EXPOSE 80
CMD ["httpd-foreground"]
